{% extends 'base.html.twig' %}

{% block title %}Modifier
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center">Modifier vos information personnelle</h1>

		<form action="{{ path("userProfileUpdate") }}" method="POST" class="row gy-3 mt-4">
			<div class="col-6">
				<label for="email" class="form-label">Adresse E-mail:</label>
				<input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="{{ app.user.email }}">
			</div>
			<div class="col-6">
				<label for="birthDate" class="form-label">Date de naissance:</label>
				<input type="date" class="form-control" id="birthDate" name="birthDate" value="{{ app.user.birthDate|date("Y-m-d") }}">
			</div>
			<div class="col-6">
				<label for="firstName" class="form-label">Prénom:</label>
				<input type="text" class="form-control" id="firstName" name="firstName" placeholder="John" value="{{ app.user.firstName }}">
			</div>
			<div class="col-6">
				<label for="lastName" class="form-label">Nom:</label>
				<input type="text" class="form-control" id="lastName" name="lastName" placeholder="Doe" value="{{ app.user.lastName }}">
			</div>
			<div class="col-6">
				<label for="phone" class="form-label">Numero de téléphone:</label>
				<input type="text" class="form-control" id="phone" name="phone" placeholder="06.12.34.56.78" value="{{ app.user.phoneNumber }}">
			</div>

			<div class="col-12 mt-5 border-bottom">
				<span class="fs-3">Adresses:</span>
			</div>
			{% for address in app.user.addresses %}
				<div class="col-4">
					<input class="form-control" type="text" value="{{ address.street }}" name="streets[]">
				</div>
				<div class="col-1">
					<input class="form-control" type="text" value="{{ address.zipcode }}" name="zipcode[]">
				</div>
				<div class="col-3">
					<input class="form-control" type="text" value="{{ address.city }}" name="city[]">
				</div>
				<div class="col-2">
					<input class="form-control" type="text" value="{{ address.country }}" name="country[]">
				</div>
				<div class="col-2">
					<button class="btn btn-primary">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-journal-minus" viewbox="0 0 16 16">
							<path fill-rule="evenodd" d="M5.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"/>
							<path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"/>
							<path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"/>
						</svg>
					</button>
				</div>
			{% endfor %}

			<div class="col-2">
				<input class="form-control" type="text" name="streets[]" placeholder="Numero de voie">
			</div>
			<div class="col-3">
				<input class="form-control" type="text" name="streets[]" placeholder="Rue, Allée, Avenue...">
			</div>
			<div class="col-2">
				<input class="form-control" type="text" name="zipcode[]" placeholder="Code postal">
			</div>
			<div class="col-2">
				<input class="form-control" type="text" name="city[]" placeholder="Ville">
			</div>
			<div class="col-2">
				<input class="form-control" type="text" name="country[]" placeholder="Pays">
			</div>
			<div class="col-1">
				<button class="btn btn-primary">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-journal-plus" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5z"/>
						<path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"/>
						<path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"/>
					</svg>
				</button>
			</div>

			<div class="col-12 text-center">
				<input type="submit" class="btn btn-warning" value="Modifier">
			</div>
		</form>
	</div>
</div>{% endblock %}
